<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
 
    <h3>以下の内容で送信する。</h3>
    <%= form_for(@blog) do |f| %>
        <!--f.hidden_fieldを使用してリクエストパラメータ値を設定-->
        <%= f.hidden_field :title %>
        <%= f.hidden_field :content %>
        
        <!--@blog.titleと@blog.contentとすることで、表示用の値を画面に出力-->
        <p>タイトル：<%= @blog.title %></p>
        <p>本文：<%= @blog.content %></p>
        <%= f.submit "登録する", class: 'btn btn-primary btn-block' %>
    <% end %>
    
    <!--link_toのhttpメソッドがgetのためparameterが初期化されてしまう-->
    <!--<%= link_to '戻る', :back %>-->
    
    <%= form_for(@blog, url: blogs_new_path) do |f| %>
        <%= f.hidden_field :title %>
        <%= f.hidden_field :content %>
        <!--parameterにname:'back'を追加-->
        <%= f.submit "戻る", name: 'back', class: 'btn btn-default btn-block' %>
    <% end %>
    </div>
</div>
