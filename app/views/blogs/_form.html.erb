<!--@blogをform_forに渡す-->
<%= form_for(@blog, url: choose_new_or_edit) do |f| %>
    <!--エラーが存在している時だけ実行-->
    <% if @blog.errors.any? %>
        <div id="error_explanation">
            <!--バリデーションエラーの件数を表示する-->
            <!--格納されたエラーメッセージの数をカウントしている-->
            <h2><%= @blog.errors.count %>件のエラーがあります。</h2>
            
            <ul>
            <!--@blog.errorsは@blogをバリデーションした際のエラー情報です。-->
            <!--full_messagesは複数のエラーメッセージを表す-->
            <% @blog.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
            </ul>
        </div>
    <% end %>
    <!--モデルカラムのラベルを作成-->
    <%= f.label :title %>
    <!--モデルカラムへのテクスト欄（フォーム）を作成-->
    <%= f.text_field :title, class: 'form-control' %>
    <br>
    <%= f.label :content %>
    <%= f.text_field :content, class: 'form-control' %>
    <br>
    <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>

<%= link_to "ブログ一覧画面に戻る", blogs_path %>