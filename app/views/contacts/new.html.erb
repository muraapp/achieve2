<div class="container">
    <div class= "col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">

    <p id="notice"><%= notice %></p>
    <h1>お問い合わせ画面</h1>
    <%= form_for(@contact, url: confirm_contacts_path) do |f| %>
        <% if @contact.errors.any? %>
            <div id="error_explanation">
                <h2><%= @contact.errors.count %>件のエラーがあります。</h2>
                <ul>
                    <% @contact.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
    <table class="table">
    <tr>
        <th>お名前</th>
        <td><%= f.text_field :name, class: 'form-control' %></td>
    </tr>
    <tr>
        <th>メールアドレス</th>
        <td><%= f.text_field :email, class: 'form-control' %></td>
    </tr>
    <tr>
        <th>お問い合わせ内容</th>
        <td><%= f.text_area :content, class: 'form-control' %></td>
    </tr>
    </table>
    <%= f.submit '確認', class: 'btn btn-primary btn-block' %>
    <% end %>

    <%= link_to "お問い合わせ一覧画面に戻る", new_contact_path, class: 'btn btn-link'  %>
    </div>
</div>