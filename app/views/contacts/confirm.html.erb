<div class="container">
    <div class= "col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">

    <h3>お問い合わせ確認画面</h3>

    <%= form_for(@contact) do |f| %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :email %>
        <%= f.hidden_field :content %>
        
        <p>お名前：<%= @contact.name %></p>
        <p>メールアドレス：<%= @contact.email %></p>
        <p>内容： <%= @contact.content %></p>
        <%= f.submit "お問い合わせ送信", class: 'btn btn-success' %>
    <% end %>

    <%= form_for(@contact, url: contacts_new_path) do |f| %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :email %>
        <%= f.hidden_field :content %>
        <%= f.submit "戻ります", name: 'back',class: 'btn btn-info' %>
    <% end %>
    </div>
</div>
